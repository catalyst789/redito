<% include ./partials/header.ejs %>

<style>
    span{
        color: blue;
    }
    #profilepic{
        width: 170px;
        height: 170px;
        margin: 0 auto;
        overflow: hidden;
        display: flex;
        flex-direction: column;
        margin-top: -120px;
        background-color: rgb(165, 162, 162);
        border-radius: 50%;
        box-shadow: 0px 5px 20px rgb(139, 139, 139);
    }
    #editIcon{
        width: 100%;
        cursor: pointer;
        fill: blue;
}
    #editIcon:hover{
        fill: slateblue;
}
    #btnE{
        border: none;
        background-color: transparent;
    }
    input{
        opacity: 0;
    }
</style>

<div style="margin-top: 100px !important;"  class="Container jumbotron mt-5">
    <div id="profilepic">
        <img style=" object-fit: cover;" src="<%= user.avatar %>" width="100%" height="100%" alt="profilepic">
        <!-- <input type="file" name="avatar"> -->
       <a name="avatar" id="fileClick"><svg id="editIcon" xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="#000" class="bi bi-pencil" viewBox="0 0 16 16">
        <path d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168l10-10zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207 11.207 2.5zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293l6.5-6.5zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325z"/>
      </svg></a>
    </div>
    <form action="/uploadprofilepic" method="post" enctype="multipart/form-data">
        <input type="file" name="avatar">
                <input type="submit">
    </form>
    <h2 class="mt-3"> Welcome to your Profile</h2><br>
    <h1>Hello, <span> <%= user.name %></span></h1>
    <h4>Your Registered Email Address is <span> <%= user.email %></span>
        <a href="/updateProfile/<%=user._id%>"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="#000" class="bi bi-pencil" viewBox="0 0 16 16">
            <path d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168l10-10zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207 11.207 2.5zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293l6.5-6.5zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325z"/>
          </svg></a></h4>
</div>

<script>
    document.querySelector('#fileClick').addEventListener('click', function(){
        document.querySelector('input[type="file"]').click();
    })
    document.querySelector('input[type="file"]').onchange = function(){
        document.querySelector('input[type="submit"]').click();
    }
</script>


